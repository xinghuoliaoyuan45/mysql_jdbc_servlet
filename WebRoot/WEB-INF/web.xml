<?xml version="1.0" encoding="utf-8"?>

<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Addperson</servlet-name>
    <servlet-class>action.Addperson</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>RemovePerson</servlet-name>
    <servlet-class>action.RemovePerson</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Showallperson</servlet-name>
    <servlet-class>action.Showallperson</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Findbyidperson</servlet-name>
    <servlet-class>action.Findbyidperson</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Updateperosn</servlet-name>
    <servlet-class>action.Updateperosn</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Hello</servlet-name>
    <servlet-class>action.Hello</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Addperson</servlet-name>
    <url-pattern>/servlet/Addperson</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RemovePerson</servlet-name>
    <url-pattern>/servlet/RemovePerson</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Showallperson</servlet-name>
    <url-pattern>/servlet/Showallperson</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Findbyidperson</servlet-name>
    <url-pattern>/servlet/Findbyidperson</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Updateperosn</servlet-name>
    <url-pattern>/servlet/Updateperosn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/servlet/Hello</url-pattern>
  </servlet-mapping>
    <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    </welcome-file-list>
 </web-app>